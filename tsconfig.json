{
  "compilerOptions": {
    "paths": {
      "@libs/*": ["core/libs/*"],
      "@guards/*": ["core/guards/*"],
      "@modules/*": ["core/modules/*"],
      "@models/*": ["core/typings/*"],
      "@config": ["config.ts"],
      "@context": ["context.ts"],
      "@sql/*": ["core/sql/*"]
    },
    "baseUrl": "./src/",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2021"],
    "target": "ESNEXT",
    "module": "CommonJS",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["src/"],
  "exclude": [".old/", "node_modules/", "dist/"]
