{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "excludeExternals": true,
    "includeVersion": true,
    "media": "docs/assets/",
    "name": "CortanaTs",
    "out": "docs/",
    "readme": "README2.md"
  },
  "include": ["src/"]
}
